{% import 'macros/icons.njk' as icons %}

{% macro table(items) %}
<table class="app-table">
  <thead>
    <tr class="dark:border-gray-70 dark:text-gray-400 dark:bg-gray-800">
      <th>{{ 'crm-customers-name'|trans }}</th>
      <th>{{ 'crm-customers-street'|trans }}</th>
      <th>{{ 'common-actions'|trans }}</th>
    </tr>
  </thead>
  <tbody class="dark:divide-gray-700 dark:bg-gray-800">
    {% for item in items %}
      <tr class="text-gray-700 dark:text-gray-400">
        <td>{{ item.name }}</td>
        <td>
          {{ item.address.street }}
          <br />
          {{ item.address.zipCode }} {{ item.address.city }}
          <br />
          {{ item.address.country }}
        </td>
        <td>
          <a href="{{ path('crm_customers_edit', { id: item.id }) }}" title="{{ 'common-edit'|trans }}">
            {{ icons.pencil(class_name='pc-icon pc-icon--sm pc-icon--action-violet') }}
          </a>
        </td>
      </tr>
      {% else %}
        <tr>
          <td colspan="3">Vide</td>
        </tr>
    {% endfor %}
  </tbody>
</table>
{% endmacro %}
