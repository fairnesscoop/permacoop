{% extends 'layouts/app.njk' %}
{% block main %}
    <h1>
        {{ 'faircalendar-events-edit-title'|trans({ date: event.date }) }}
    </h1>
    <form method="POST" action="{{ path('faircalendar_event_delete', { id: event.id }) }}">
        <button class="pc-btn pc-btn--error" type="submit">
            {{ 'common-form-delete'|trans }}
        </button>
    </form>
    <div class="pc-card pc-p pc-mt" style="--p: calc(2 * var(--w)); --mt: calc(3 * var(--w))">
        {% include 'components/faircalendar_event_form.njk' %}
    </div>
{% endblock main %}
