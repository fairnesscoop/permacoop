{% extends 'layouts/app.njk' %}
{% import 'macros/icons.njk' as icons %}
{% from 'macros/breadcrumb.njk' import breadcrumb %}

{% set title = 'meal-tickets-title'|trans %}

{% block main %}
<div class="pc-container">
    {{ breadcrumb([{ title: 'people-title'|trans }, { title: title }]) }}

    <div class="pc-row pc-row--middle pc-row--between">
        <h1 class="pc-m" style="--m: 0">
            {{ title }}
        </h1>
        <a href="{{ path('people_meal_tickets_removal_add') }}" class="pc-btn pc-icon--left">
            {{ icons.plus() }}
            {{ 'meal-tickets-add-removal-title'|trans }}
        </a>
    </div>

    {% table table, { attr: {class: 'pc-mt', style: '--mt: calc(4 * var(--w))'} } %}
</div>
{% endblock main %}
