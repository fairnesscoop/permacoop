{
  "name": "server",
  "version": "1.0.0",
  "description": "ERP building for cooperatives",
  "author": "Mathieu MARCHOIS",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --preserveWatchOutput --watch --debug",
    "start:prod": "node dist/src/main",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "migration:diff": "ts-node ./node_modules/.bin/typeorm migration:generate -d migrations -n",
    "migration:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:drop": "ts-node ./node_modules/.bin/typeorm schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.7.8",
    "@nestjs/typeorm": "^7.1.4",
    "argon2": "^0.26.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "crypto": "^1.0.1",
    "date-fns": "^2.8.1",
    "helmet": "^3.22.0",
    "lodash": ">=4.17.19",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "shortid": "^2.2.15",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/passport-http-bearer": "^1.0.35",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "highlight.js": ">=10.4.1",
    "jest": "^25.2.7",
    "minimist": ">=1.2.6",
    "prettier": "^1.18.2",
    "serialize-javascript": ">=3.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.1.1",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>/../"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "16"
  }
}
