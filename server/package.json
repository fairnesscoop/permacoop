{
  "name": "server",
  "version": "1.0.0",
  "description": "ERP building for cooperatives",
  "author": "Mathieu MARCHOIS",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch --debug",
    "start:prod": "node dist/src/main",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "migration:diff": "ts-node ./node_modules/.bin/typeorm migration:generate -d migrations -n",
    "migration:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:drop": "ts-node ./node_modules/.bin/typeorm schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.5",
    "@nestjs/core": "^9.0.5",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.5",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "argon2": "^0.26.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "date-fns": "^2.28.0",
    "helmet": "^3.22.0",
    "lodash": ">=4.17.19",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.15",
    "swagger-ui-express": "^4.5.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^25.2.3",
    "@types/node": "^18.0.6",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "highlight.js": "^11.6.0",
    "jest": "^28.1.3",
    "minimist": "^1.2.6",
    "prettier": "^1.18.2",
    "serialize-javascript": "^6.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.7",
    "ts-loader": "^6.1.1",
    "ts-mockito": "^2.5.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.14.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePaths": [
      "/var/www"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
