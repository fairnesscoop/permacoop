{
  "name": "server",
  "version": "1.0.0",
  "description": "ERP building for cooperatives",
  "author": "Mathieu MARCHOIS",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "migration:diff": "ts-node ./node_modules/.bin/typeorm migration:generate -d migrations -n",
    "migration:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:drop": "ts-node ./node_modules/.bin/typeorm schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^6.7.2",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.2.0",
    "argon2": "^0.25.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.8.1",
    "helmet": "^3.21.2",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "shortid": "^2.2.15",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.20",
    "typescript": "^3.7.2",
    "uniqid": "^5.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.12",
    "@types/passport-http-bearer": "^1.0.34",
    "@types/supertest": "^2.0.8",
    "jest": "^25.2.7",
    "minimist": ">=1.2.2",
    "prettier": "^1.18.2",
    "serialize-javascript": ">=2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.1.1",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePaths": [
      "/var/www"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
