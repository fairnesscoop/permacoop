<!DOCTYPE html>
<html lang="fr" {% if theme %}data-theme="{{ theme }}"{% endif %}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta name="theme-color" content="#343a40" />

    {% block preload %}
      {# Preload these to reduce / avoid flash of unstyled content (FOUC). #}
      <link rel="preload" as="style" href="{{ asset('main.css') }}">
      <link rel="preload" as="image" href="{{ asset('images/logo.png') }}">
    {% endblock %}

    {% block styles %}
      <link rel="stylesheet" href="{{ asset('main.css') }}">
    {% endblock %}

    <link rel="manifest" href="{{ asset('manifest.json') }}" />
    <link rel="icon" type="image/png" href="{{ asset('images/icons/favicon.ico')}}">

    <title>
      {% block title %}
        {% if title is defined %}
          {{ title }} -
        {% endif %}
        Permacoop
      {% endblock %}
    </title>

    <noscript>
      <style>
        .pc-js-only {
          display: none;
        }
      </style>
    </noscript>
  </head>

  <body>
    {% block body %}{% endblock %}

    {% block scripts %}
      <script src="{{ asset('main.js') }}" type="module" async defer></script>
    {% endblock %}
  </body>
</html>
