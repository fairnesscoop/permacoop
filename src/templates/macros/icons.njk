{% from 'macros/attr.njk' import render_attr %}

{% macro svg_attr(attr=null, mode='stroke') %}
  {% set attr = attr|merge({ class: 'pc-icon pc-icon--sm ' + attr.class|default('') }) %}
  {% set attr = attr|merge({ 'aria-hidden': 'true', fill: 'none', viewBox: attr.viewBox|default('0 0 24 24'), width: attr.width|default('24'), height: attr.height|default('24') }) %}
  {% set attr = attr|merge({ stroke: 'currentColor' } if mode == 'stroke' else { fill: 'currentColor' }) %}
  {{- render_attr(attr) -}}
{% endmacro %}

{% macro _icon(attr=null, paths=[], mode='stroke') %}
  <svg {{ svg_attr(attr, mode=mode) }}>
    {% for d in paths %}
      <path d="{{ d }}" {% if mode == 'stroke' %}stroke-linecap="round" stroke-linejoin="round" stroke-width="2"{% endif %} />
    {% endfor %}
  </svg>
{% endmacro %}

